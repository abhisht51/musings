---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

const allBlogPosts = await getCollection('blog', ({ data }) => {
  return !data.draft;
});

const recentPosts = allBlogPosts
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 3);
---

<BaseLayout title="Musings - Personal Blog">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Hero Section -->
    <div class="text-center mb-16">
      <h1 class="text-4xl sm:text-5xl font-bold font-mono mb-6">
        <span class="text-blue-600 dark:text-blue-400">$</span> 
        <span class="bg-gradient-to-r from-blue-600 to-purple-600 dark:from-blue-400 dark:to-purple-400 bg-clip-text text-transparent">
          Welcome to my musings
        </span>
      </h1>
      <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto leading-relaxed">
        A place where I share my thoughts on coding, technology, and the endless journey of learning.
        Expect deep dives into software engineering, random observations, and the occasional rant.
      </p>
    </div>

    <!-- Recent Posts Section -->
    {recentPosts.length > 0 && (
      <section class="mb-12">
        <div class="flex items-center justify-between mb-8">
          <h2 class="text-2xl font-bold font-mono text-gray-900 dark:text-gray-100">
            <span class="text-green-600 dark:text-green-400">//</span> Recent Posts
          </h2>
          <a 
            href="/blog" 
            class="text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 font-mono text-sm transition-colors"
          >
            view all â†’
          </a>
        </div>
        
        <div class="grid gap-6">
          {recentPosts.map((post) => (
            <article class="group bg-gray-50 dark:bg-gray-800 rounded-lg p-6 hover:bg-gray-100 dark:hover:bg-gray-700 transition-all duration-200 border border-gray-200 dark:border-gray-700">
              <div class="flex items-start justify-between">
                <div class="flex-1">
                  <h3 class="text-xl font-semibold mb-2">
                    <a 
                      href={`/blog/${post.slug}`}
                      class="text-gray-900 dark:text-gray-100 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors"
                    >
                      {post.data.title}
                    </a>
                  </h3>
                  <p class="text-gray-600 dark:text-gray-300 mb-3 line-clamp-2">
                    {post.data.description}
                  </p>
                  <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                    <time class="font-mono">
                      {post.data.publishDate.toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      })}
                    </time>
                    {post.data.tags.length > 0 && (
                      <div class="ml-4 flex gap-2">
                        {post.data.tags.slice(0, 3).map((tag) => (
                          <span class="px-2 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded text-xs font-mono">
                            {tag}
                          </span>
                        ))}
                      </div>
                    )}
                  </div>
                </div>
              </div>
            </article>
          ))}
        </div>
      </section>
    )}

    <!-- CTA Section -->
    <div class="bg-gradient-to-r from-blue-50 to-purple-50 dark:from-blue-900/20 dark:to-purple-900/20 rounded-lg p-8 text-center border border-blue-200 dark:border-blue-800">
      <h2 class="text-2xl font-bold font-mono mb-4 text-gray-900 dark:text-gray-100">
        <span class="text-purple-600 dark:text-purple-400">console.log</span>
        <span class="text-gray-600 dark:text-gray-300">("Stay updated!");</span>
      </h2>
      <p class="text-gray-600 dark:text-gray-300 mb-6">
        New posts are added regularly. Check back often or bookmark this page!
      </p>
      <a 
        href="/blog" 
        class="inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors font-mono"
      >
        Browse All Posts
      </a>
    </div>
  </div>
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
